#!/bin/bash
function purty_prompt {
    # Foreground colors
    local NORMAL="\[\e[0m\]"

    local BLACK="\[\e[0;30m\]"
    local GRAY="\[\e[1;30m\]"

    local RED="\[\e[0;31m\]"
    local LIGHT_RED="\[\e[1;31m\]"

    local GREEN="\[\e[0;32m\]"
    local LIGHT_GREEN="\[\e[1;32m\]"

    local BROWN="\[\e[0;33m\]"
    local YELLOW="\[\e[1;33m\]"

    local BLUE="\[\e[0;34m\]"
    local LIGHT_BLUE="\[\e[1;34m\]"

    local PURPLE="\[\e[0;35m\]"
    local MAGENTA="\[\e[1;35m\]"

    local CYAN="\[\e[0;36m\]"
    local LIGHT_CYAN="\[\e[1;36m\]"

    local LIGHT_GRAY="\[\e[0;37m\]"
    local WHITE="\[\e[1;37m\]"

    # Background colors
    local BLACK_BG="\[\e[40m\]"
    local RED_BG="\[\e[41m\]"
    local GREEN_BG="\[\e[42m\]"
    local YELLOW_BG="\[\e[43m\]"
    local BLUE_BG="\[\e[42m\]"
    local PURPLE_BG="\[\e[45m\]"
    local CYAN_BG="\[\e[46m\]"
    local WHITE_BG="\[\e[47m\]"

    if [[ $USER == "root" ]]
    then
        local USER_COLOR="$LIGHT_RED"
        local USER_PROMPT="$LIGHT_RED\\$"
    else
        local USER_COLOR="$BROWN"
        local USER_PROMPT="\`if [ \$? = 0 ]; then echo '\$'; else echo '\[\e[41m\]\$'; fi\`"
    fi
    PS1="\[\033]0;\u@\h: \w\007\]$NORMAL\
$GREEN\
[$USER_COLOR\u$GREEN]\
\e(0q\e(B\
[$PURPLE@\h$GREEN]\
\e(0q\e(B$GREEN\
[$NORMAL\!$GREEN]\
\e(0q\e(B$GREEN\
[$NORMAL\D{%H:%M}$GREEN]\
\e(0q\e(B\e(0q\e(B\
[$BLUE\w$GREEN]$NORMAL\n\
$GREEN${USER_PROMPT}$NORMAL "
}

purty_prompt
unset purty_prompt
